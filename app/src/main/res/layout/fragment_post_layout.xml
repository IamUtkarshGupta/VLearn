<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/prof_icon"
            android:id="@+id/prof_icon"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/prof_icon"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="post:username"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:id="@+id/post_username"
        android:background="@drawable/tv_border"
        android:textColor="@color/black"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:id="@+id/artical"
        android:text="Artical"
        android:layout_below="@+id/post_username"
        android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/artical"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/nup"
                android:padding="10dp"/>
            <ImageView
                android:id="@+id/like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/up" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:padding="10dp"
                android:id="@+id/ndown"/>

            <ImageView
                android:id="@+id/dislike"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/down"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:padding="10dp"
                android:id="@+id/bookmarkState"
                android:visibility="invisible"/>



        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/user_id"
            android:padding="10dp"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/post_title"
            android:padding="10dp"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/topic"
            android:padding="10dp"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/post_date"
            android:padding="10dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/post_id"
            android:layout_width="115dp"
            android:layout_height="88dp"
            android:padding="10dp"
            android:text="0"
            android:visibility="invisible" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>