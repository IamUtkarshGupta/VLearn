<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myprofile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="50dp"
        android:textSize="50dp"
        android:text="username"
        android:id="@+id/tvProfUname"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_below="@+id/tvProfUname"
        android:id="@+id/tvProfFollowers"
        android:layout_alignParentLeft="true"
        android:textSize="30dp"
        android:text="followers"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/tvProfFollowing"
        android:layout_below="@+id/tvProfUname"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="30dp"
        android:text="following"/>


    <Button
        android:id="@+id/bPersonal"
        android:layout_below="@+id/tvProfFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"

        android:text="Update Personal Info" />

    <Button
        android:id="@+id/bUpdinterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bPersonal"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"

        android:text="Update intersts" />

    <Button
        android:id="@+id/bBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/bUpdinterest"

        android:text="bookmarks" />
    <Button
        android:id="@+id/bMypost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/bBookmark"

        android:text="mypost" />


</RelativeLayout>