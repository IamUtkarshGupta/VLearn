<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


<RelativeLayout

    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:fitsSystemWindows="true"


    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/app_icon"
        android:layout_centerHorizontal="true"
        android:id="@+id/loginim"
        android:layout_marginTop="50dp"
        android:transitionName="logoTransition"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_name"
        android:text="VLearn"
        android:textSize="30dp"
        android:padding="10dp"
        android:transitionName="app_nameTransition"
        android:layout_centerInParent="true"
        android:layout_below="@+id/loginim"
        />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:paddingStart="10dp"
                android:id="@+id/L_username"
                android:layout_below="@+id/app_name"
                android:background="@drawable/capsule"
                android:text="Email123@gmail.com"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/L_password"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/capsule"
                android:layout_below="@+id/L_username"
                android:layout_marginTop="30dp"
                android:paddingStart="10dp"

                android:text="Password"
                android:inputType="textPassword"
                />

      <!--  <Button
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_drawable"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:text="login"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/L_password"
            />

            -->
        <TextView
            android:id="@+id/goto_register"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"


            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:text="New User?\nRegister"
            android:textAlignment="center"
            android:layout_below="@+id/L_password"


            />
    <FrameLayout
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:background="@drawable/sign_in_btn"
        android:clickable="true"
        android:elevation="4dp"
        android:foreground="?selectableItemBackground"
        android:onClick="load">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:text="Sign in"
            android:textColor="#ffffff" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:visibility="invisible" />
    </FrameLayout>



    <View
        android:id="@+id/reveal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:visibility="invisible" />


</RelativeLayout>

</layout>