<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionDetail">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myQuestion"
        android:padding="20dp"
        android:text="question"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:text="username"
        android:gravity="end"
        android:layout_below="@id/myQuestion"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:scrollbars="vertical"
        android:layout_above="@+id/editanswer"
        android:id="@+id/ques_detail_recylerview">
    </androidx.recyclerview.widget.RecyclerView>


    <EditText
        android:id="@+id/editanswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/postanswer"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:lines="20"
        android:minLines="1"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:text="add answer"
        android:background="#bee7f7"
        android:padding="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postanswer"
        android:layout_alignParentBottom="true"
        android:text="post answer"
        android:textSize="10dp"
        android:background="@color/colorPrimaryDark"/>








</RelativeLayout>